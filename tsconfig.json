{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["ES2023", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["vitest/globals"],
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "./vitest.setup.ts"],
  "exclude": ["node_modules"]
}
